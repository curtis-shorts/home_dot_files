#bash aliases file

############################## Settings Handling ##############################
alias s='source ~/.aliases'
alias aliases='vim ~/.aliases'
alias bashrc='vim ~/.bashrc'
alias vimrc='vim ~/.vimrc'

############################## Tools ##############################
alias v='vim'
alias nv='nvim'

############################## Auto-Coloring ##############################
alias ls='ls --color=auto'
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'

############################## Unix Basics ##############################
# ls commands
alias lt='ls -ltrh'
alias la='ls -ltrhA'

# Lazy shorthands
alias h='history'
alias c='clear'
alias j='jobs'

# Directory stack
alias pu='pushd .'
alias po='popd'
alias d='dirs -v'
alias dc='dirs -c'

# Disk space
alias dff='df -h'
alias ddu='du -hs ./*'

# Alternate command prompts
alias prompt1='export PS1="\e[33;1m[\T] \e[91m\u@\h: \e[97m\w\n\e[32m(\!)\e[32m \e[97m--> "'
alias prompt2='export PS1="\e[1;32m[\T] \e[33m\u@\h: \e[33m\w\n\e[35m(\!)\e[97m \e[97m--> "'
alias prompt3='export PS1="\e[35;1m[\T] \e[36m\u@\h: \e[97m\w\n\e[34m(\!)\e[33m \e[97m--> "'
alias prompt4='export PS1="${debian_chroot:+($debian_chroot)}\[\033[01;32m\]\u@\h\[\033[00m\]:\[\033[01;34m\]\w \$\[\033[00m\]"'

############################## Custom Commands ##############################
alias resolve='/home/cushorts/scripts/custom_commands/resolve_file_path.sh'

############################## SSH Setup ##############################
# DRAC ssh auto-password entry
alias dssh='/Users/cushorts/workspace/bin/drac_login.export $DAILY_DRAC_PASSWORD ssh'
alias dscp='/Users/cushorts/workspace/bin/drac_login.export $DAILY_DRAC_PASSWORD scp'

# Settings for only on your local device
if [[ -z "${SSH_CONNECTION}" ]]; then
    #alias python='/usr/bin/python3'
    # Function to sync an environemnt with the current environemnt's settings
    function sync_env {
        sync_target=$1
        echo "Moving environemnt files to $sync_target"
        if [ $2 == 1 ]; then
            dscp ~/.bashrc ~/.vimrc ~/.aliases $sync_target:~
        else
            scp ~/.bashrc ~/.vimrc ~/.aliases $sync_target:~
        fi
    }

    # Sync shorthands for DRAC systems
    alias sync_beluga='sync_env beluga 1'
    alias sync_narval='sync_env narval 1'
    alias sync_cedar='sync_env cedar 1'
    alias sync_graham='sync_env graham 1'
    alias sync_niagara='sync_env niagara 1'

    alias sync_drac_env='sync_beluga ; sync_narval ; sync_cedar ; sync_graham'

# Settings for remote nodes only
else
    alias wsq='watch -n 1 sq'
fi

